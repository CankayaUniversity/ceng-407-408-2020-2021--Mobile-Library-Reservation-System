<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Admin_Add_Library">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:accessibilityHeading="true"
        android:background="#C2C2C2"
        android:backgroundTint="@color/mlrs_mlrs_mainpageBlue"
        android:scrollbarThumbHorizontal="@drawable/ic_launcher_foreground">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="120dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="286dp"
            android:layout_marginBottom="46dp"
            app:srcCompat="@drawable/read_book"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="340dp"/>

        <TextView
            android:layout_width="279dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="102dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:background="@color/mlrs_lightBlue"
            android:fontFamily="sans-serif-condensed-medium"
            android:lineSpacingExtra="8sp"
            android:paddingTop="10dp"
            android:text="ADD LIBRARY"
            android:textAlignment="center"
            android:textColor="@color/mlrs_white_button"
            android:textSize="30sp"
            app:cornerRadius="?android:attr/buttonCornerRadius"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="630dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="70dp"
            android:backgroundTint="#FFFFFF"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView9"
                android:layout_width="221dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="48dp"
                android:layout_marginTop="330dp"
                android:layout_marginEnd="130dp"

                android:layout_marginBottom="227dp"
                android:text="Library Capacity"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="221dp"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="38dp"
                android:layout_marginTop="59dp"
                android:layout_marginEnd="158dp"
                android:layout_marginBottom="447dp"
                android:text="Library Name"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="304dp"
                android:layout_height="52dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="44dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="44dp"
                android:layout_marginBottom="521dp"
                android:text="New Library Information"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="26sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtLibraryName"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"

                android:layout_marginStart="67dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="73dp"
                android:layout_marginBottom="395dp"
                android:background="@color/mlrs_white_button"
                android:ems="13"
                android:hint=""
                android:text="" />

            <EditText
                android:id="@+id/txtLibraryAddres"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"

                android:layout_marginStart="70dp"
                android:layout_marginTop="235dp"

                android:layout_marginEnd="70dp"
                android:layout_marginBottom="302dp"
                android:background="@color/mlrs_white_button"
                android:ems="13"
                android:hint=""
                android:text="" />

            <EditText
                android:id="@+id/txtLibraryCapacity"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"

                android:layout_marginStart="74dp"
                android:layout_marginTop="370dp"

                android:layout_marginEnd="66dp"
                android:layout_marginBottom="199dp"
                android:background="@color/mlrs_white_button"
                android:ems="13"
                android:hint=""
                android:text="" />

            <Button
                android:id="@+id/btnAddLibrary"
                style="?android:textAppearanceSmall"
                android:layout_width="235dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="95dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="455dp"
                android:layout_marginEnd="101dp"
                android:layout_marginBottom="104dp"
                android:backgroundTint="@color/mlrs_white_button"
                android:radius="50dp"
                android:text="ADD"
                android:textColor="#2D9CDB"
                android:textColorHint="#2D9CDB"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerRadius="50dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="221dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="142dp"
                android:layout_marginBottom="328dp"
                android:text="Library Address"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_ad_back"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="154dp"
                android:layout_marginBottom="9dp"
                android:background="@color/mlrs_white_button"
                android:text="Back"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>