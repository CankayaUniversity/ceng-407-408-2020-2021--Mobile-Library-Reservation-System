<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_LM_List_Libraries">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:accessibilityHeading="true"
        android:background="#C2C2C2"
        android:backgroundTint="@color/mlrs_mlrs_mainpageBlue"
        android:scrollbarThumbHorizontal="@drawable/ic_launcher_foreground"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="120dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="286dp"
            app:srcCompat="@drawable/read_book" />

        <TextView
            android:layout_width="279dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="98dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@color/mlrs_lightBlue"
            android:text="LIBRARY LIST"
            android:textAlignment="center"
            android:textColor="@color/mlrs_white_button"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="280dp"
            android:layout_marginBottom="21dp"
            android:text="Back" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="21dp"
            android:text="Next" />

        <TextView
            android:id="@+id/txt_AreaLiblist"
            android:layout_width="wrap_content"
            android:layout_height="451dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="92dp"
            android:scrollbars="vertical"
            android:textAlignment="textStart"
            android:textColor="@color/mlrs_white_button"
            android:textSize="23sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="346dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="556dp"
            android:entries="@array/libraryName"
            />

        <TextView
            android:id="@+id/tv_lmID_list_lib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>