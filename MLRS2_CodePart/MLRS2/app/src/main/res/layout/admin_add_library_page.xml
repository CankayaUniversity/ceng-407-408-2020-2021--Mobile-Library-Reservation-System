<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:accessibilityHeading="true"
    android:background="#C2C2C2"
    android:backgroundTint="@color/mlrs_mlrs_mainpageBlue"
    android:scrollbarThumbHorizontal="@drawable/ic_launcher_foreground"
    tools:context=".LM_MenuActivity">

    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="318dp"
        android:layout_marginStart="29dp">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="96dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="262dp"
            android:layout_marginBottom="238dp"
            app:srcCompat="@drawable/read_book"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="340dp"></ImageView>

        <TextView
            android:layout_width="276dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="71dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="238dp"
            android:background="@color/mlrs_lightBlue"
            android:fontFamily="sans-serif-condensed-medium"
            android:lineSpacingExtra="8sp"
            android:paddingTop="10dp"
            android:text="ADD LIBRARY"
            android:textAlignment="center"
            android:textColor="@color/mlrs_white_button"
            android:textSize="30sp"
            app:cornerRadius="?android:attr/buttonCornerRadius"></TextView>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="586dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="221dp"
            android:layout_height="60dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="330dp"
            android:layout_marginEnd="98dp"
            android:layout_marginBottom="25dp"
            android:text="Library Capacity"
            android:textAlignment="center"

            android:textColor="@color/Black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="211dp"
            android:layout_height="47dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="94dp"
            android:layout_marginBottom="235dp"
            android:text="Library Name"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="287dp"
            android:layout_height="303dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="233dp"
            android:text="New Library Information"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="24sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="100dp"
            android:background="@color/mlrs_white_button"

            android:ems="13"
            android:hint=""
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="235dp"
            android:background="@color/mlrs_white_button"

            android:ems="13"
            android:hint=""
            android:inputType="textPersonName"
            android:text="" />



        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="370dp"
            android:background="@color/mlrs_white_button"

            android:ems="13"
            android:hint=""
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:id="@+id/btnEmail_sign_in_button"
            style="?android:textAppearanceSmall"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="455dp"
            android:backgroundTint="@color/mlrs_white_button"
            android:radius="50dp"
            android:text="ADD"
            android:textColor="#2D9CDB"
            android:textColorHint="#2D9CDB"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="50dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="221dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="25dp"
        android:text="Library Address"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:layout_height="60dp"
        android:layout_marginStart="45dp"

        android:layout_marginTop="330dp"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>