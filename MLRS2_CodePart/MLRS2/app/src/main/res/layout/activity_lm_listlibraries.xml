<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:accessibilityHeading="true"
    android:background="#C2C2C2"
    android:backgroundTint="@color/mlrs_mlrs_mainpageBlue"
    android:scrollbarThumbHorizontal="@drawable/ic_launcher_foreground"
    tools:context=".LM_MenuActivity">

    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="318dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="96dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="262dp"
            android:layout_marginBottom="238dp"
            app:srcCompat="@drawable/read_book"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="340dp"></ImageView>

        <TextView
            android:layout_width="276dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="71dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="238dp"
            android:background="@color/mlrs_lightBlue"
            android:fontFamily="sans-serif-condensed-medium"
            android:lineSpacingExtra="8sp"
            android:paddingTop="10dp"
            android:text="LIBRARY LIST"
            android:textAlignment="center"
            android:textColor="@color/mlrs_white_button"
            android:textSize="30sp"
            app:cornerRadius="?android:attr/buttonCornerRadius"></TextView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="495dp"
        android:layout_above="@+id/btn_admin_menu_edit_profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="105dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="335dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_admin_menu_edit_profile"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/mlrs_white_button"
        android:fontFamily="sans-serif-black"
        android:text="CONTINUE"
        android:textColor="@color/Black"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>