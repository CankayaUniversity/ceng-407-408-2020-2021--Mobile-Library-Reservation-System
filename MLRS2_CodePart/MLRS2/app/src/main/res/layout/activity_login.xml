<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="430dp"
        android:layout_height="742dp"
        android:background="@color/mlrs_blue"
        android:orientation="vertical"
        android:padding="0dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:contentDescription="@string/mlrs_login_logo"
            android:src="@drawable/register_logo_mlrs" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="280dp"
            android:layout_height="47dp"
            android:layout_marginLeft="70dp"
            android:background="@color/mlrs_lightBlue"
            android:backgroundTint="@color/mlrs_lightBlue"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@color/mlrs_white_button"
            android:textColorHint="@color/mlrs_white_button"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="280dp"
            android:layout_height="47dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:background="@color/mlrs_lightBlue"
            android:backgroundTint="@color/mlrs_lightBlue"
            android:hint="@string/password"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@color/mlrs_white_button"
            android:textColorHint="@color/mlrs_white_button"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnEmail_sign_in_button"
            style="?android:textAppearanceSmall"
            android:layout_width="210dp"
            android:layout_height="55dp"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/mlrs_white_button"
            android:text="SIGN IN"
            android:textColor="@color/mlrs_blue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvforgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvlink_register"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Forgot Password?"
            android:textColor="@color/mlrs_white_button"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="Don't have an account?"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvlink_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="-25dp"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="@color/mlrs_white_button"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvresend_verification_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvforgot_password"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="@string/resend_verification_email"
            android:textColor="@color/mlrs_white_button"
            android:textColorHint="@android:color/holo_orange_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"></ProgressBar>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>